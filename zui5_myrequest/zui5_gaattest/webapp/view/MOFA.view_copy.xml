<mvc:View controllerName="com.kaust.zui5gaattest.controller.MOFA"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m.MessageBox"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" height="100%"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:u="sap.ui.unified">
    <Shell id="shell">
        <App id="idAppControl">
            <NavContainer id="MOFAContainer">
                <pages>
                    <Page id="MOFAAttestPage" title="{i18n>MOFATitle}" showNavButton="true" navButtonPress="onBack">
                        <content>
                            <Title text="Welcome {EmpDetails>/FirstName}" wrapping="true" textAlign="End" level="H1" width="95%"/>
                            <Wizard id="MOFAAttestation" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" complete="onSubmit"
                                finishButtonText="{i18n>SUBREQ}" enableBranching="true" height="95%" >
                                <WizardStep id="MOFAStep" title="{i18n>MOFAREQ}" nextStep="SADADStep" validated="false">
                                    <FlexBox id="__ReqFlexBox" direction="Column" wrap="Wrap" >
                                    <Text text="{i18n>SELREQS}" class="font1Rem bold"/>
                                    </FlexBox>
                                    <FlexBox direction="Column" wrap="Wrap">
                                        <FlexBox wrap="Wrap" direction="Row"  alignItems="Center">
                                            <Label text="{i18n>LETISSAUDIAREBIA}" class="font1Rem bold" labelFor="CollectionM11"/>
                                            <RadioButtonGroup id="CollectionM11" columns="2">
                                                <RadioButton id="rbm11" text="{i18n>YES}" selected="true"/>
                                                <RadioButton id="rbm12" text="{i18n>NO}" select="onNoLetter"/>
                                            </RadioButtonGroup>
                                        </FlexBox>
                                        <FlexBox id="__Flex12" wrap="Wrap" direction="Row" visible="false"  alignItems="Center">
                                            <Label text="{i18n>LETISSAUDIAREBIA}" class="font1Rem bold" labelFor="CollectionM12"/>
                                            <RadioButtonGroup id="CollectionM12" columns="2">
                                                <RadioButton id="rbm21" text="{i18n>YES}" selected="true"/>
                                                <RadioButton id="rbm22" text="{i18n>NO}" select="onNoLetterattest"/>
                                            </RadioButtonGroup>
                                        </FlexBox>
                                        <FlexBox direction="Row" wrap="Wrap" class="sapUiSmallMarginTop" alignItems="Center">
                                            <Text text="{i18n>KINDLYGOTO}"></Text>
                                            <Link class="sapUiTinyMarginBeginEnd link" text="{i18n>MINFORAFWEB}" target="_blank" href="https://www.mofa.gov.sa/sites/mofaen/EServ/ServiceCatalog/Pages/serviceDetails.aspx?svc=128\"/>
                                            <Text text="{i18n>REQATTSER}"></Text>
                                        </FlexBox>
                                        <FlexBox direction="Column">
                                            <Text text="{i18n>ATTSCRMOFAREQ}" class="sapUiSmallMarginTop"/>
                                            <Image id="mofaimage" src="images/MOFAScreen.PNG" alt="MOFA Request image" densityAware="true" decorative="false" height="300px" width="300px" press="handleMofaPress" class="sapUiSmallMarginTop"></Image>
                                            <u:FileUploader id="fileUploaderm1" name="myFileUploadm1" uploadOnChange="false" sendXHR="true" useMultipart="false" placeholder="{i18n>UPMOFAREQ}" buttonText="{i18n>UPLOAD}" uploadComplete="handleUpload1Complete" change="mofaAttach" class="sapUiSmallMarginTop">
                                                <u:parameters>
                                                    <u:FileUploaderParameter id="param1" name="x-csrf-token"/>
                                                    <u:FileUploaderParameter id="slug1" name="slug"/>
                                                    <u:FileUploaderParameter name="X-Requested-With1" value="XMLHttpRequest"/>
                                                    <u:FileUploaderParameter name="Content-Type1" value="text/rtf"/>
                                                </u:parameters>
                                            </u:FileUploader>
                                        </FlexBox>
                                    </FlexBox>
                                </WizardStep>
                                <WizardStep id="SADADStep" title="{i18n>SADADBILLPAY}" nextStep="MCDDOCStep" validated="false">
                                    <FlexBox direction="Column" wrap="Wrap">
                                        <Text text="{i18n>DOONLINEBANSERMAKPAY}" class="sapUiSmallMarginTop"/>
                                        <Text text="{i18n>ADDBILL}" class="sapUiTinyMarginTop sapUiTinyMarginBegin"/>
                                        <Text text="1. SAMBA: (SADAD Bills > Define Bills > Add bills > Government Sectors > MOFA Services)" class="bold sapUiTinyMarginTop sapUiSmallMarginBegin"/>
                                        <Text text="2. SABB: (SADAD Bills > Biller number 101 for MOFA)" class="bold sapUiTinyMarginTop sapUiSmallMarginBegin"/>
                                        <Text text="{i18n>PAYBILLATSCRBEL}" class="sapUiTinyMarginTop sapUiTinyMarginBegin"/>
                                        <Image id="sadadimage" src="images/SADADPayment.png"  class="sapUiTinyMarginTop" alt="MOFA Invoice image" densityAware="true" decorative="false" height="300px" width="300px" press="handleSadadPress"></Image>
                                        <Text text="{i18n>ATPROPAY}" class="sapUiTinyMarginTop sapUiTinyMarginBegin"/>
                                        <u:FileUploader id="fileUploaderm2" name="myFileUploadm2" uploadOnChange="false" sendXHR="true" useMultipart="false" placeholder="{i18n>UPLSADADREC}" buttonText="{i18n>UPLOAD}" uploadComplete="handleUpload2Complete" change="sadadAttach" class="sapUiTinyMarginTop">
                                            <u:parameters>
                                                <u:FileUploaderParameter id="param2" name="x-csrf-token"/>
                                                <u:FileUploaderParameter id="slug2" name="slug"/>
                                                <u:FileUploaderParameter name="X-Requested-With1" value="XMLHttpRequest"/>
                                                <u:FileUploaderParameter name="Content-Type1" value="text/rtf"/>
                                            </u:parameters>
                                        </u:FileUploader>
                                    </FlexBox>
                                </WizardStep>
                                <WizardStep id="MCDDOCStep" title="{i18n>COLLDELDOCS}" validated="false">
                                    <FlexBox direction="Column" wrap="Wrap">
                                        <Text text="{i18n>FORONS}" class="bold"/>
                                        <FlexBox wrap="Wrap" direction="Row"   alignItems="Center">
                                            <Label text="{i18n>NEEDFORCONATT}" labelFor="CollectionM11" class="bold"/>
                                            <RadioButtonGroup id="CollectionM31" columns="2" selectedIndex="1">
                                                <RadioButton id="rbm311" text="{i18n>YES}" select="validateCollecInf"/>
                                                <RadioButton id="rbm312" text="{i18n>NO}" select="onForeignAttest"/>
                                            </RadioButtonGroup>
                                        </FlexBox>
                                        <FlexBox id="__Flex22" wrap="Wrap" direction="Row" visible="false"    alignItems="Center">
                                            <Text text="{i18n>SELCONS}" class="sapUiSmallMarginEnd bold"/>
                                            <ComboBox id="oMCBConsul" selectionChange="onSelConsulate" items="{ConsDetails>/results}">
                                                <core:Item key="{ConsDetails>code}" text="{ConsDetails>description}"/>
                                            </ComboBox>
                                        </FlexBox>
                                        <Text class="sapUiSmallMarginTop" text="{i18n>POSTDOCATT}"/>
                                        <Text class="sapUiTinyMarginTop" text="{i18n>COLL}"/>
                                        <FlexBox  wrap="Wrap" alignItems="Center" >
                                            <RadioButtonGroup id="CollectionM32" columns="2" selectedIndex="2">
                                                <RadioButton id="rbm31" text="{i18n>DROPMUSELF}" select="onDropOff" visible="false"/>
                                                <RadioButton id="rbm32" text="{i18n>UPSPICKUP}" select="onUPSPickUp" selected="true"/>
                                            </RadioButtonGroup>
                                            <Text id="isMOFAPickup" class="red" text="{i18n>COLLTIME}" visible="true"/>

                                        </FlexBox>
                                        <Text text="{i18n>DEL}" class="sapUiTinyMarginTop"/>
                                        <FlexBox wrap="Wrap" direction="Row" backgroundDesign="Transparent" class="sapUiTinyMarginTop">
                                            <RadioButtonGroup id="DeliveryM11" columns="2" selectedIndex="2">
                                                <RadioButton id="rbm33" text="{i18n>PICKMYSELF}" select="onPickMyself" visible="false"/>
                                                <RadioButton id="rbm34" text="{i18n>UPSDELV}" select="onUPSDelv" selected="true"/>
                                            </RadioButtonGroup>
                                        </FlexBox>
                                        <f:Form id="__PrefForm">
                                            <f:layout >
                                                <f:ResponsiveGridLayout breakpointM="800" columnsL="2" columnsM="2" />
                                            </f:layout>
                                            <f:formContainers>
                                                <f:FormContainer>
                                                    <f:formElements>
                                                        <f:FormElement label="Name" class="myLabel">
                                                            <f:fields>
                                                                <Input value="{EmpDetails>/FirstName} {EmpDetails>/MiddleName} {EmpDetails>/LastName}" id="fm_name" editable="false"/>
                                                            </f:fields>
                                                        </f:FormElement>
                                                        <f:FormElement label="KAUST ID" class="myLabel">
                                                            <f:fields>
                                                                <Input value="{EmpDetails>/KaustID}" id="fm_kaustid" editable="false"/>
                                                            </f:fields>
                                                        </f:FormElement>
                                                        <f:FormElement label="Mobile Number" class="myLabel">
                                                            <f:fields>
                                                                <Input value="{PrefDetails>/mobile_no}" id="fm_mobile" liveChange="validateCollecInf"/>
                                                            </f:fields>
                                                        </f:FormElement>
                                                    </f:formElements>
                                                </f:FormContainer>
                                                <f:FormContainer>
                                                    <f:formElements>
                                                        <f:FormElement label="Building Name/No" class="myLabel">
                                                            <f:fields>
                                                                <Input value="{PrefDetails>/building_no}" id="fm_bnum" liveChange="validateCollecInf"/>
                                                            </f:fields>
                                                        </f:FormElement>
                                                        <f:FormElement label="Level" class="myLabel">
                                                            <f:fields>
                                                                <Input value="{PrefDetails>/level_b}" id="fm_level" liveChange="validateCollecInf"/>
                                                            </f:fields>
                                                        </f:FormElement>
                                                        <f:FormElement label="Room No/Cubicle" class="myLabel">
                                                            <f:fields>
                                                                <Input value="{PrefDetails>/building_name}" id="fm_bname" liveChange="validateCollecInf"/>
                                                            </f:fields>
                                                        </f:FormElement>
                                                    </f:formElements>
                                                </f:FormContainer>
                                            </f:formContainers>
                                        </f:Form>
                                    </FlexBox>
                                </WizardStep>
                            </Wizard>
                        </content>
                    </Page>
                </pages>
            </NavContainer>
        </App>
    </Shell>
</mvc:View>