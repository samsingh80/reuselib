          <f:Form editable="true" >
            <f:layout>
              <f:ResponsiveGridLayout labelSpanXL="4"
                labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false"
                emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
                columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="Host/IP/Services" required="true" visible="{oInternalModel>/ipVisible}"></Label>
                    </f:label>
                    <f:fields>
                      <TextArea id="hostIpId" visible="{oInternalModel>/ipVisible}" placeholder="{i18n>HOST_IP}" tooltip="{oRequestModel>/hostIpId}" growing="true" enabled="false">
                      <layoutData>
                        <l:GridData span="L10 M8 S8" />
                      </layoutData></TextArea>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement id="fileSection" visible="false">
                    <f:label>
                      <Label text="Passport/ National ID" ></Label>
                    </f:label>
                    <f:fields>
                      <Link id="fileUrl" text="Click to download"></Link>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
            </f:formContainers>
          </f:Form>
