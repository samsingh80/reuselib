              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:fields>
                      <RadioButtonGroup id="vpnType" columns="3" enabled="false">
                        <buttons>
                          <RadioButton text="VPN Access"></RadioButton>
                          <RadioButton text="Shaheen"></RadioButton>
                        </buttons>
                      </RadioButtonGroup>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="Request Type"></Label>
                    </f:label>
                    <f:fields>
                      <ComboBox id="newOrRenew" enabled="false"/>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
            </f:formContainers>
          </f:Form>
