          <f:Form id="newType" editable="true">
            <f:title>
              <core:Title text="External User Information" />
            </f:title>
            <f:layout>
              <f:ResponsiveGridLayout labelSpanXL="4"
                labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false"
                emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
                columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="First Name" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="eFname" tooltip="{oRequestModel>/eFname}" enabled="false"></Input>
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:label>
                      <Label text="Last Name" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="eLname" tooltip="{oRequestModel>/eLname}" enabled="false"></Input>
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:label>
                      <Label text="Date of Birth" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="dob" maxLength="40" change="validatedob" enabled="false">
                      </Input>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>

              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="Middle Name"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="eMname" tooltip="{oRequestModel>/eMname}" enabled="false"></Input>
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:label>
                      <Label text="Email" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="eEmail" tooltip="{oRequestModel>/eEmail}" enabled="false"></Input>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>

              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="VPN Expiry Date" wrapping="true" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="expDateNew" enabled="false" width="50%"></Input>
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                <f:label>
                  <Label text="Suggested User ID" visible="{oInternalModel>/suggUserIdVisible}" required="true"></Label>
                </f:label>
                <f:fields>
                  <Input id="suggestedUserId" class="boldClass" enabled="false" visible="{oInternalModel>/suggUserIdVisible}" change="validateUser">
                    <layoutData>
                      <l:GridData span="L5 M6 S12" />
                    </layoutData>
                  </Input>
                  <CheckBox id="checkbox" select="suggestUserId" enabled="false" visible="{oInternalModel>/suggUserIdVisible}"></CheckBox>
                </f:fields>
              </f:FormElement>
                </f:formElements>
              </f:FormContainer>

              <f:FormContainer id="UIDSection" visible="false">
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="Provisioned UserID" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Text id="suggestedUID" text="" class="boldClass">
                        <layoutData>
                          <l:GridData span="L5 M6 S12" />
                        </layoutData>
                      </Text>
                    </f:fields>
                  </f:FormElement>
                  </f:formElements>
                  </f:FormContainer>
            </f:formContainers>
          </f:Form>

          <f:Form id="renewType" editable="true" visible="false">
            <f:title>
              <core:Title text="External User Information" />
            </f:title>
            <f:layout>
              <f:ResponsiveGridLayout labelSpanXL="4"
                labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false"
                emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
                columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="User AD Account" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="adAccount" tooltip="{oRequestModel>/adAccount}" enabled="false"></Input>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:label>
                      <Label text="VPN Expiry Date" wrapping="true" required="true"></Label>
                    </f:label>
                    <f:fields>
                      <Input id="expiryDate" enabled="false" width="50%"></Input>
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
            </f:formContainers>
          </f:Form>
