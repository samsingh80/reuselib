 <core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"> 

	<l:Grid
    defaultSpan="L12 M12 S12"
    width="auto" vSpacing="0">
    <l:content>
        
      <f:SimpleForm id="SFDetails"
        minWidth="1024"
        maxContainerCols="2"
        editable="false"
        layout="ResponsiveGridLayout"
        labelSpanL="5"
        labelSpanM="5"
        emptySpanL="0"
        emptySpanM="0"
        columnsL="2"
        columnsM="2">
        <f:content>    
          
       	  <core:Title text="Service Details" />
          <Label text="Type of Incident" />
          <Text id="idTypeOfIncident" text="{SIncidentModel>/incident_type}" />
          <Label text="IP of Affected System"/>
	      <Text id="idIP" text="{SIncidentModel>/location}" /> 
	      <Label text="Additional Information"/>
	      <Text id="idComments" text="{SIncidentModel>/comments}" />
		  <Label text="Suspected Source"/>
	      <Text id="idSuspectedSource" text="{SIncidentModel>/suspected_source}" />	      
	      
        </f:content>
      </f:SimpleForm>
      
    </l:content>
  </l:Grid>
    
</core:FragmentDefinition>
