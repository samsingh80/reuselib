<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
					<f:Form editable="true">
						<f:layout>
							<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
								emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"></f:ResponsiveGridLayout>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement label="Request Type">
										<f:fields>
											<!-- <Select id="reqTypeId" >
												<core:Item key="" text=""/>
											</Select> -->
											<Input id="reqTypeId" >
											<layoutData>
											<l:GridData span="L5 M5"></l:GridData>
											</layoutData></Input>											
										</f:fields>
									</f:FormElement> 
									<!-- <f:FormElement >
										<f:fields>
											<Text id="subHeader" text="" class="subHeader"></Text>
										</f:fields>
									</f:FormElement>  -->  
									
									<f:FormElement id="serviceId" visible="false">
										<f:label>
											<Label text="Service Type" required="true"></Label>
										</f:label>
										<f:fields>
											<Input id="idServType"></Input>
											
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="Port/ Tag Number" required="true"></Label>
										</f:label>
										<f:fields>
											<Input id="idPortNo" ></Input>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="Location" required="true"></Label>
										</f:label>
										<f:fields>
											<Input id="idBul">
											<layoutData>
											<l:GridData span="L2 M2"></l:GridData>
											</layoutData></Input>											
											<Input id="idLevel">
											<layoutData>
											<l:GridData span="L1 M1"></l:GridData>
											</layoutData></Input>											
											<Input id="idRoom" placeholder="Room">
											<layoutData>
											<l:GridData span="L2 M2"></l:GridData>
											</layoutData></Input>											
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="IP Address (If Known)"></Label>
										</f:label>
										<f:fields>
											<Input id="ipAddress" enabled="false" ></Input>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>					
						</f:formContainers></f:Form>
					</core:FragmentDefinition>