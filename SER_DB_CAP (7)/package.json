{
    "name": "SER_DB_CAP",
    "version": "0.0.1",
    "description": "Service DB CAPM Application",
    "engines": {
        "node": ">= 12.18.0"
    },
    "dependencies": {
        "@sap-cloud-sdk/core": "^1.46.0",
        "@sap/audit-logging": "^3",
        "@sap/cds": "^5",
        "@sap/cds-odata-v2-adapter-proxy": "^1",
        "@sap/hana-client": "^2",
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3",
        "axios": "^0.21.1",
        "debug": "^4.3",
        "express": "^4",
        "passport": "^0.4.1"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.0.5",
        "@sap/ux-specification": "^1.90.0",
        "sqlite3": "^5"
    },
    "scripts": {
        "start": "cds run"
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "joe": {
                            "roles": [
                                "Admin",
                                "Viewer"
                            ]
                        },
                        "julie": {
                            "roles": [
                                "Viewer"
                            ]
                        },
                        "bob": {
                            "roles": [
                                "Viewer"
                            ]
                        }
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana"
                },
                "[development]": {
                    "kind": "hana"
                },
                "model": [
                    "db",
                    "srv"
                ]
            },
            "solman": {
                "kind": "odata",
                "credentials": {
                    "destination": "Solman",
                    "path": "ZAI_CRM_GW_ORDER_MAINTAIN_SRV_01",
                    "requestTimeout": 30000
                }
            },
            "Ticket": {
                "kind": "odata",
                "credentials": {
                    "destination": "Solman",
                    "path": "ZSOITSMPR001_TICKET_SRV",
                    "requestTimeout": 30000
                }
            },
            "S4HANA": {
                "kind": "odata",
                "credentials": {
                    "destination": "S4HANA",
                    "requestTimeout": 30000
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/list"
    ]
}
