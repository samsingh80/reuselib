 <core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"> 

	<l:Grid
    defaultSpan="L12 M12 S12"
    width="auto" vSpacing="0">
    <l:content>
        
      <f:SimpleForm
        minWidth="1024"
        maxContainerCols="2"
        editable="false"
        layout="ResponsiveGridLayout"
        labelSpanL="5"
        labelSpanM="5"
        emptySpanL="0"
        emptySpanM="0"
        columnsL="2"
        columnsM="2">
        <f:content>         
          
       	  <core:Title text="Service Details" />
          <Label text="Request Type" />
          <Text id="reqType" text="" />
          <Label text="Display Name"/>
	      <Text id="dispName" text="" /> 
	      <Label text="Requested Email Address"/>
	      <Text id="emailTxt" text="" /> 
	      <Label text="Primary owner of Mailbox"/>
	      <Text id="primeOwnBox" text="" />
	      <Label text="Delegates"/>
	      <Text id="delegate" text="" />  
	      <Label text="Requested LoginID"/>
	      <Text id="reqLogin" text="" />  
	      <Label text="Account Description"/>
	      <Text id="descr" text="" />  
	      
	      
        </f:content>
      </f:SimpleForm>
      
    </l:content>
  </l:Grid>
    
</core:FragmentDefinition>
