 <core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core">  

	<l:Grid
    defaultSpan="L12 M12 S12"
    width="auto" vSpacing="0">
    <l:content>
        
      <f:SimpleForm
        minWidth="1024"
        maxContainerCols="2"
        editable="false"
        layout="ResponsiveGridLayout"
        labelSpanL="5"
        labelSpanM="5"
        emptySpanL="0"
        emptySpanM="0"
        columnsL="2"
        columnsM="2">
        <f:content>         
          
       	  <core:Title text="Service Details" />
          <Label text="Display Name of Group"/>
	      <Text id="dispName" text="" /> 
	      <Label text="Co owner of Group"/>
	      <Text id="coOwnGrp" text="" />
	      <Label text="Group members"/>
	      <Text id="grpMembers" text="" />
	      <Label text="Email Address of Group"/>
	      <Text id="emailTxt" text="" /> 
	      <Label text="Primery owner of Group"/>
	      <Text id="primeOwnGrp" text="" />
	      <Label text="Authorized Sender(s)"/>
	      <Text id="authSenders" text="" />  
	      <Label text="Account Description"/>
	      <Text id="descr" text="" />  
	      
	      
        </f:content>
      </f:SimpleForm>
      
    </l:content>
  </l:Grid>
    
</core:FragmentDefinition>
